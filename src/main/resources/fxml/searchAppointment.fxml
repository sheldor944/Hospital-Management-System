      <TableView fx:id="appointmentTableView" layoutX="54.0" layoutY="100.0" prefHeight="418.0" prefWidth="846.0">
        <columns>
          <TableColumn fx:id="patientNameTableColumn" prefWidth="178.0" text="Patient Name" />
          <TableColumn fx:id="doctorNameTableColumn" prefWidth="449.0" text="Doctor Name" />
            <TableColumn fx:id="dateTableColumn" prefWidth="113.0" text="Date" />
            <TableColumn fx:id="timeTableColumn" prefWidth="105.0" text="Time" />
        </columns>
      </TableView>
      <DatePicker fx:id="datePicker" layoutX="992.0" layoutY="165.0" onAction="#getSelectedDate" />
      <ChoiceBox fx:id="timePicker" layoutX="993.0" layoutY="263.0" prefWidth="150.0" />
      <Label layoutX="946.0" layoutY="267.0" text="Time" />
