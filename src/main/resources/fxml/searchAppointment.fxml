         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="rButtonDiscard" layoutX="997.0" layoutY="131.0" mnemonicParsing="false" onAction="#getDecision" text="DIscard" toggleGroup="$editOrDiscard" />
      <Button layoutX="1189.0" layoutY="31.0" mnemonicParsing="false" onAction="#switchToMenu" text="Return" />
   </children>
</AnchorPane>
